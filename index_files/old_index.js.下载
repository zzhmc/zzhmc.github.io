;(function(){
    var fn={
        init:function(){
            $('.cd').css('height','0px');
			$('.downloadlist li:first-child a').append('<em style="position: absolute;bottom: 4px;right: 0;border-bottom-right-radius: 10px;text-align: center;height: 20px;width: 40px;font-size: 12px;color: #fff;font-style: normal;line-height: 20px;opacity: .15;">广告</em>').attr({'href':'http://dps.minecraftxz.com/tls578e8323/988','title':'我的世界电脑版下载','style':'position:relative;display:block;'}).find('img').attr({'src':'http://static.minecraftxz.com/pc/images/g01.png','alt':'我的世界电脑版下载','style':'width:100%;display:block;'});
			
        },
        hoverFn:function(a,b){
            $(document).on('mouseenter',a,function(){
                $(this).addClass('active').siblings().removeClass('active');
                $(b).eq($(this).index()).addClass('active').siblings().removeClass('active');
            })
        },
        runFn:function(){
            this.init();
            this.hoverFn('.az-software .rank-ol li','.az-software .tab-rank .rank-list-new');
            this.hoverFn('.ios-software .rank-ol li','.ios-software .tab-rank .rank-list-new');
            this.hoverFn('.rank-list-new li','');
        }
    }
    fn.runFn();
})();